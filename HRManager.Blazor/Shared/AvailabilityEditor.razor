@using Syncfusion.Blazor.Navigations 
@using Blazorise
@namespace HRManager.Blazor.Pages.Shared 
 
@code {
    [Parameter]
    public EventCallback<Dictionary<DayOfWeek, List<AvailabilityDto>>> AvailabilitiesDataChanged { get; set; }
    [Parameter]
    public Dictionary<DayOfWeek, List<AvailabilityDto>> AvailabilitiesData { get; set; }
    [Parameter]
    public bool IsReadOnly { get; set; }

    string selectedTab = "mon";

    private void OnTabChanged(string name)
    {
        selectedTab = name;
    }
}

<Tabs SelectedTab="@selectedTab" SelectedTabChanged="@OnTabChanged">
    <Items>
        <Tab Name="mon">Monday</Tab>
        <Tab Name="tues">Tuesday</Tab>
        <Tab Name="wed">Wednesday</Tab>
        <Tab Name="thurs">Thursday</Tab>
        <Tab Name="fri">Friday</Tab>
        <Tab Name="sat">Saturday</Tab>
        <Tab Name="sun">Sunday</Tab>
    </Items>
    <Content>
        <TabPanel Name="mon">
            <AvailabilityDay Day="DayOfWeek.Monday" @bind-Availabilities="AvailabilitiesData[DayOfWeek.Monday]" IsReadOnly="@IsReadOnly" />
        </TabPanel>
        <TabPanel Name="tues">
            <AvailabilityDay Day="DayOfWeek.Tuesday" @bind-Availabilities="AvailabilitiesData[DayOfWeek.Tuesday]" IsReadOnly="@IsReadOnly" />
        </TabPanel>
        <TabPanel Name="wed">
            <AvailabilityDay Day="DayOfWeek.Wednesday" @bind-Availabilities="AvailabilitiesData[DayOfWeek.Wednesday]" IsReadOnly="@IsReadOnly"/>
        </TabPanel>
        <TabPanel Name="thurs">
            <AvailabilityDay Day="DayOfWeek.Thursday" @bind-Availabilities="AvailabilitiesData[DayOfWeek.Thursday]" IsReadOnly="@IsReadOnly"/>
        </TabPanel>
        <TabPanel Name="fri">
            <AvailabilityDay Day="DayOfWeek.Friday" @bind-Availabilities="AvailabilitiesData[DayOfWeek.Friday]" IsReadOnly="@IsReadOnly"/>
        </TabPanel>
        <TabPanel Name="sat">
            <AvailabilityDay Day="DayOfWeek.Saturday" @bind-Availabilities="AvailabilitiesData[DayOfWeek.Saturday]" IsReadOnly="@IsReadOnly"/>
        </TabPanel>
        <TabPanel Name="sun">
            <AvailabilityDay Day="DayOfWeek.Sunday" @bind-Availabilities="AvailabilitiesData[DayOfWeek.Sunday]" IsReadOnly="@IsReadOnly"/>
        </TabPanel>
    </Content>
</Tabs>
