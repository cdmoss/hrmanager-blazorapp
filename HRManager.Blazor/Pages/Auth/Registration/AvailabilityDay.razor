@using Syncfusion.Blazor.Calendars
@using Syncfusion.Blazor.Inputs

@code {
    [Parameter]
    public string Day { get; set; }
    private TimeSpan test;
    private List<AvailabilityDto> availabilities { get; set; } = new List<AvailabilityDto>() { new AvailabilityDto() };

    public void AddTime()
    {
        availabilities.Add(new AvailabilityDto());
        StateHasChanged();
    }

    public void RemoveTime()
    {
        if (availabilities.Any())
        {
            availabilities.Remove(availabilities.Last());
            StateHasChanged();
        }
    }
}

<div id="day-container" class="mt-3">
    @foreach (var availability in availabilities)
    {
        <div class="range-container">
            <SfTimePicker TValue="TimeSpan" ID="start" @bind-Value="availability.StartTime" />
            <span id="divider">to</span>
            <SfTimePicker TValue="TimeSpan" ID="end" @bind-Value="availability.EndTime" />
        </div>
    }
<div id="btn-container" class="mt-3">
    <button type="button" @onclick="RemoveTime" id="add-btn" class="btn btn-dark"><i class="fas fa-minus"></i> &nbsp; Remove Time</button>
    <div id="spacer;"></div>
    <button type="button" @onclick="AddTime" id="remvove-btn" class="btn btn-light"><i class="fas fa-plus"></i> &nbsp; Add Time</button>
</div>
</div>

