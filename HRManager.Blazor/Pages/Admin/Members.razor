@page "/admin/members"
@using HRManager.Common
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Data
@attribute [Authorize(Roles = "SuperAdmin, Admin")]

<AuthorizeView>
    <Authorized>
        <SfGrid TValue="MemberAdminReadEditDto" 
                DataSource="members" 
                AllowFiltering="true" 
                AllowGrouping="true" 
                AllowPaging="true" 
                AllowSorting="true" 
                AllowExcelExport="true"
                AllowMultiSorting="true"
                AllowSelection="true"
                AllowPdfExport="true">
            <GridColumns>
                <GridColumn Field=@nameof(MemberAdminReadEditDto.Personal.FirstName) HeaderText="First Name" TextAlign="TextAlign.Center" />
                <GridColumn Field=@nameof(MemberAdminReadEditDto.Personal.LastName) HeaderText="Last Name" TextAlign="TextAlign.Center" />
                <GridColumn Field=@nameof(MemberAdminReadEditDto.AccountData.Email) HeaderText="Email" TextAlign="TextAlign.Center" />
                <GridColumn Field=@nameof(MemberAdminReadEditDto.Personal.MainPhone) HeaderText="Phone" TextAlign="TextAlign.Center" />
                <GridColumn Field=@nameof(MemberAdminReadEditDto.ApprovalStatus) HeaderText="Status" TextAlign="TextAlign.Center" />
            </GridColumns>
        </SfGrid>
    </Authorized>
    <NotAuthorized>
       
    </NotAuthorized>
</AuthorizeView>

